<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0" spacing="15" style="-fx-background-color: #8d85a6;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.13" fx:controller="Admin.HallActions.AddHall">
    <VBox alignment="CENTER" prefHeight="511.0" prefWidth="800.0" spacing="20.0" style="-fx-padding: 10px;">
        <Label text="Добавление зала">
            <font>
                <Font name="Segoe UI Bold" size="29.0" />
            </font>
        </Label>

        <HBox spacing="15">
            <Label alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="252.0" style="-fx-font-size: 14px;" text="Название зала:">
                <padding>
                    <Insets top="5.0" />
                </padding>
            </Label>
            <TextField fx:id="hallField" prefHeight="34.0" prefWidth="250" promptText="Введите название зала" />
        </HBox>

        <HBox spacing="15">
            <Label alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="251.0" style="-fx-font-size: 14px;" text="Вместимость зала:">
                <padding>
                    <Insets top="5.0" />
                </padding>
            </Label>
            <TextField fx:id="capacityField" prefHeight="34.0" prefWidth="248.0" promptText="Введите вместимость зала" />
        </HBox>

        <Button fx:id="addButton" onAction="#addHallAction" prefHeight="37.0" prefWidth="242.0" styleClass="enter" text="Добавить зал" textFill="WHITE">
            <font>
                <Font name="Segoe UI Semibold" size="14.0" />
            </font>
        </Button>
        <Button fx:id="backButton" onAction="#handleBackButton" prefHeight="35.0" prefWidth="243.0" styleClass="button" text="Назад" textFill="WHITE">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
    </VBox>
</VBox>
