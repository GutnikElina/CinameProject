<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="800.0" spacing="15" style="-fx-background-color: #8d85a6;" xmlns="http://javafx.com/javafx/17.0.13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Admin.HallActions.UpdateHall">
    <VBox alignment="CENTER" prefHeight="511.0" prefWidth="800.0" spacing="20.0" style="-fx-padding: 10px;">
        <Label text="Обновление зала">
         <font>
            <Font name="Segoe UI Bold" size="29.0" />
         </font></Label>

        <HBox spacing="15">
            <Label alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="251.0" style="-fx-font-size: 14px;" text="ID зала:">
            <font>
               <Font name="Agency FB" size="12.0" />
            </font>
            <padding>
               <Insets top="5.0" />
            </padding></Label>
            <TextField fx:id="idField" prefHeight="32.0" prefWidth="248.0" promptText="Введите ID зала" />
        </HBox>

        <HBox spacing="15">
            <Label alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="252.0" style="-fx-font-size: 14px;" text="Название зала:">
            <padding>
               <Insets top="5.0" />
            </padding></Label>
            <TextField fx:id="nameField" prefHeight="29.0" prefWidth="250" promptText="Введите название зала" />
        </HBox>

        <HBox spacing="15">
            <Label alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="251.0" style="-fx-font-size: 14px;" text="Вместимость:">
            <padding>
               <Insets top="5.0" />
            </padding></Label>
            <TextField fx:id="capacityField" prefHeight="30.0" prefWidth="248.0" promptText="Введите вместимость" />
        </HBox>

        <Button fx:id="updateButton" onAction="#updateHallAction" prefHeight="31.0" prefWidth="248.0" styleClass="enter" text="Обновить зал" textFill="WHITE">
         <font>
            <Font name="Segoe UI Semibold" size="13.0" />
         </font></Button>
        <Button fx:id="backButton" onAction="#handleBackButton" prefHeight="32.0" prefWidth="243.0" styleClass="button" text="Назад" textFill="WHITE">
         <font>
            <Font name="Segoe UI Semibold" size="13.0" />
         </font></Button>
    </VBox>
</VBox>
