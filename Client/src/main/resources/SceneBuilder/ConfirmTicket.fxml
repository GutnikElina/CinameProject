<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20" style="-fx-background-color: #8d85a6;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Employee.ConfirmTicket">

    <Label alignment="CENTER" prefHeight="112.0" prefWidth="476.0" text="Подтверждение билетов">
        <font>
            <Font name="Segoe UI Semibold" size="32.0" />
        </font>
        <VBox.margin>
            <Insets left="170.0" top="50.0" />
        </VBox.margin>
    </Label>

    <ListView fx:id="ticketsListView" prefHeight="300" prefWidth="700" />

    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#handleRefreshButton" styleClass="enter" prefHeight="41.0" prefWidth="194.0" text="Обновить список билетов">
            <HBox.margin>
                <Insets left="10.0" />
            </HBox.margin>
            <font>
                <Font name="Segoe UI Semibold" size="14.0" />
            </font>
        </Button>
    </HBox>

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="backButton" styleClass="button" onAction="#handleBackButton" prefHeight="39.0" prefWidth="187.0" text="Назад">
            <font>
                <Font name="Segoe UI Semibold" size="14.0" />
            </font>
        </Button>
    </HBox>
</VBox>
