<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20" style="-fx-background-color: #8d85a6;" xmlns="http://javafx.com/javafx/17.0.13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Admin.MovieActions.AddMovie">
    <Label text="Добавить фильм" />
    <GridPane hgap="10" vgap="15">
        <Label text="Название фильма:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="titleField" promptText="Введите название фильма" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Жанр:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="genreField" promptText="Введите жанр" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Продолжительность (мин):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="durationField" promptText="Введите продолжительность" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Дата выхода:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <DatePicker fx:id="releaseDatePicker" promptText="Выберите дату" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="URL постера:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="posterField" promptText="Введите URL постера" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="URL трейлера:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="trailerField" promptText="Введите URL трейлера" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="Описание:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextArea fx:id="descriptionField" promptText="Введите описание фильма" GridPane.columnIndex="1" GridPane.rowIndex="6" prefRowCount="4" />
    </GridPane>
    <HBox spacing="20" alignment="CENTER">
        <Button text="Добавить фильм" styleClass="enter" onAction="#addMovieAction" />
        <Button fx:id="backButton" styleClass="button" text="Отмена" onAction="#handleBackButton" />
    </HBox>
</VBox>
